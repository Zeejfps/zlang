const mem = std.mem;
type Array<T> = std.array.Array<T>;

type String;
type Char;

func create(literal: Array<u8>*) : String*;
func create(
    literal: Array<u8>*, 
    allocator: Allocator* = env.default_allocator
) : String*;
func destroy(str: String*);
func length(str: String* ) : usize;
func slice(str: String*, start_index: usize) : Slice<Char>;
func slice(str: String*, start_index: usize, length: usize) : Slice<Char>;
func get_char(str: String* , index: usize) : Char;
